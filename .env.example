# Database Configuration
DATABASE_URL=postgresql://webhook_user:webhook_pass@localhost:5432/webhook_relay

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=webhook-relay-payloads

# Service Ports
RECEIVER_PORT=3001
LOGGER_PORT=3002
FORWARDER_PORT=3003
DASHBOARD_PORT=3004

# Service URLs (for inter-service communication)
RECEIVER_URL=http://localhost:3001
LOGGER_URL=http://localhost:3002
FORWARDER_URL=http://localhost:3003
DASHBOARD_URL=http://localhost:3004

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_SALT=your-api-key-salt-change-in-production

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=300000
RETRY_BACKOFF_MULTIPLIER=2

# Node Environment
NODE_ENV=development
LOG_LEVEL=info