generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  apiKey    String   @unique @map("api_key")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  endpoints Endpoint[]

  @@map("users")
}

model Endpoint {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  name           String
  destinationUrl String   @map("destination_url")
  secret         String?
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  webhookEvents WebhookEvent[]
  stats         EndpointStats[]

  @@index([userId])
  @@map("endpoints")
}

model WebhookEvent {
  id           String    @id @default(uuid())
  endpointId   String    @map("endpoint_id")
  payloadS3Key String    @map("payload_s3_key")
  receivedAt   DateTime  @default(now()) @map("received_at")
  status       String    @default("pending") // pending, forwarding, delivered, failed
  forwardedAt  DateTime? @map("forwarded_at")
  headers      Json?
  method       String    @default("POST")

  endpoint         Endpoint           @relation(fields: [endpointId], references: [id], onDelete: Cascade)
  deliveryAttempts DeliveryAttempt[]
  logs             Log[]

  @@index([endpointId])
  @@index([status])
  @@index([receivedAt])
  @@map("webhook_events")
}

model DeliveryAttempt {
  id            String    @id @default(uuid())
  eventId       String    @map("event_id")
  attemptNumber Int       @map("attempt_number")
  status        String    // success, failed, retrying
  responseCode  Int?      @map("response_code")
  responseS3Key String?   @map("response_s3_key")
  attemptedAt   DateTime  @default(now()) @map("attempted_at")
  nextRetryAt   DateTime? @map("next_retry_at")
  errorMessage  String?   @map("error_message")

  event WebhookEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([status])
  @@index([nextRetryAt])
  @@map("delivery_attempts")
}

model Log {
  id            String   @id @default(uuid())
  eventId       String   @map("event_id")
  requestS3Key  String?  @map("request_s3_key")
  responseS3Key String?  @map("response_s3_key")
  duration      Int?     // in milliseconds
  statusCode    Int?     @map("status_code")
  loggedAt      DateTime @default(now()) @map("logged_at")
  logType       String   @map("log_type") // request, response, error

  event WebhookEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([loggedAt])
  @@map("logs")
}

model EndpointStats {
  id               String   @id @default(uuid())
  endpointId       String   @map("endpoint_id")
  date             DateTime @db.Date
  totalReceived    Int      @default(0) @map("total_received")
  totalDelivered   Int      @default(0) @map("total_delivered")
  totalFailed      Int      @default(0) @map("total_failed")
  avgResponseTime  Int?     @map("avg_response_time") // in milliseconds
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  endpoint Endpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)

  @@unique([endpointId, date])
  @@index([endpointId])
  @@index([date])
  @@map("endpoint_stats")
}