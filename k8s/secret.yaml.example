apiVersion: v1
kind: Secret
metadata:
  name: webhook-relay-secrets
  namespace: webhook-relay
type: Opaque
stringData:
  DATABASE_URL: "postgresql://webhook_user:webhook_pass@postgres-service:5432/webhook_relay"
  AWS_REGION: "us-east-1"
  AWS_ACCESS_KEY_ID: "your-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-secret-access-key"
  S3_BUCKET_NAME: "webhook-relay-payloads"
  JWT_SECRET: "your-super-secret-jwt-key-change-in-production"
  API_KEY_SALT: "your-api-key-salt-change-in-production"
---
